#include "stdafx.h"
#include <iostream>
#include <string>
#include "conio.h"
#define max 100

void cargarvector(int v[max], int n);
void ordenarvectoracs(int v[max], int n);
void ordenarvectordes(int v[max], int n);
void mostrarvector(int v[max], int n);
using namespace std;

void main()
{
	int v[max], n;
	cout << "ordena un vector" << endl;
	do
	{
		cout << "tamanho del vector: ";
		cin >> n;
	} while (n < 0 || n > max);
	cout << endl << "cargue el vector" << endl;
	cargarvector(v, n);
	cout << endl << "vector ordenado de forma ascendente" << endl;
	ordenarvectoracs(v, n);
	mostrarvector(v, n);
	cout << endl << "vector ordenado de forma desendente" << endl;
	ordenarvectordes(v, n);
	mostrarvector(v, n);
	cout << endl;

	getch();
}

void cargarvector(int v[max], int n)
{
	for (int i = 0; i < n; i++)
		cin >> v[i];
}

void ordenarvectoracs(int v[max], int n)
{
	int aux;
	for (int i = 0; i < n; i++)
		for (int j = 0; j < n; j++)
		{
			if (v[i] < v[j])
			{
				aux = v[i];
				v[i] = v[j];
				v[j] = aux;
			}
		}
}

void ordenarvectordes(int v[max], int n)
{
	int aux;
	for (int i = 0; i < n; i++)
		for (int j = 0; j < n; j++)
		{
			if (v[i] > v[j])
			{
				aux = v[i];
				v[i] = v[j];
				v[j] = aux;
			}
		}
}

void mostrarvector(int v[max],int n)
{
	for (int i = 0; i < n; i++)
		cout << v[i] << "\t";
}
