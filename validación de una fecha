#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

using namespace std;

void validar_año(int &a);
void validar_mes(int &m);
void mes_letra(int m, char* &ml);
void validar_dia(int &d, int l);
void año_bisiesto(int a, int m, int &l);
void dia_letra(int qdc, char* &dl);
void que_dia_cae(int d, int m, int a, int &qdc);

void main()
{
	int año, mes, dia, limdia, quediacae;
	char *mesletra, *dialetra;
	cout << "Este programa valida una fecha ";
	cout << "\n";
	validar_año(año);
	cout << "\n";
	validar_mes(mes);
	cout << "\n";
	mes_letra(mes, mesletra);
	año_bisiesto(año, mes, limdia);
	validar_dia(dia, limdia);
	que_dia_cae(dia, mes, año, quediacae);
	dia_letra(quediacae, dialetra);
	cout << "\n";
	cout << "La fecha ingresada es: " << dia << "/" << mesletra << "/" << año << "  y cae un dia " << dialetra;
	cout << "\n";
	getch;
}

void validar_año(int &a)
{
	do
	{
		cout << "Ingrese el año: ";
		cin >> a;
		if (a <= 0)
		{
			cout << "El año ingresado es incorrecto";
			cout << "\n";
			cout << "Ingrese un año mayor a cero";
			cout << "\n";
		}
	} while (a <= 0);
	if (a % 4 == 0)
	{
		cout << "Es un año bisiesto!";
	}
}

void validar_mes(int &m)
{
	do
	{
		cout << "ingrese el mes: ";
		cin >> m;
		if (m <= 0 || m >= 13)
		{
			cout << "El mes ingresado es incorrecto";
			cout << "\n";
			cout << "Ingrese un mes valido de 1 a 12";
			cout << "\n";
		}
	} while (m <= 0 || m >= 13);
	if (m == 1)
	{
		cout << "El mes es ENERO";
	}
	if (m == 2)
	{
		cout << "El mes es FEBRERO";
	}
	if (m == 3)
	{
		cout << "El mes es MARZO";
	}
	if (m == 4)
	{
		cout << "El mes es ABRIL";
	}
	if (m == 5)
	{
		cout << "El mes es MAYO";
	}
	if (m == 6)
	{
		cout << "El mes es JUNIO";
	}
	if (m == 7)
	{
		cout << "El mes es JULIO";
	}
	if (m == 8)
	{
		cout << "El mes es AGOSTO";
	}
	if (m == 9)
	{
		cout << "El mes es SEPTIEMBRE";
	}
	if (m == 10)
	{
		cout << "El mes es OCTUBRE";
	}
	if (m == 11)
	{
		cout << "El mes es NOVIEMBRE";
	}
	if (m == 12)
	{
		cout << "El mes es DICIEMBRE";
	}

}

void validar_dia(int &d, int l)
{
	do
	{
		cout << "Ingrese el dia: ";
		cin >> d;
		if (d <= 0 || d > l)
		{
			cout << "El numero de dias es incorrecto";
			cout << "\n";
			cout << "Este mes solo tiene " << l << " dias ingrese el dia nuevamente";
			cout << "\n";
		}
	} while (d <= 0 || d > l);
}

void año_bisiesto(int a, int m, int &l)
{
	if (a % 4 == 0)
	{
		if (m == 2)
		{
			l = 29;
		}
		else
		{
			if (m == 1 || m == 3 || m == 5 || m == 7 || m == 8 || m == 10 || m == 12)
			{
				l = 31;
			}
			else
			{
				l = 30;
			}
		}
	}
	else
	{
		if (m == 2)
		{
			l = 28;
		}
		else
		{
			if (m == 1 || m == 3 || m == 5 || m == 7 || m == 8 || m == 10 || m == 12)
			{
				l = 31;
			}
			else
			{
				l = 30;
			}
		}
	}
}

void mes_letra(int m, char* &ml)
{
	if (m == 1)
	{
		ml = "ENERO";
	}
	if (m == 2)
	{
		ml = "FEBRERO";
	}
	if (m == 3)
	{
		ml = "MARZO";
	}
	if (m == 4)
	{
		ml = "ABRIL";
	}
	if (m == 5)
	{
		ml = "MAYO";
	}
	if (m == 6)
	{
		ml = "JUNIO";
	}
	if (m == 7)
	{
		ml = "JULIO";
	}
	if (m == 8)
	{
		ml = "AGOSTO";
	}
	if (m == 9)
	{
		ml = "SEPTIEMBRE";
	}
	if (m == 10)
	{
		ml = "OCTUBRE";
	}
	if (m == 11)
	{
		ml = "NOVIEMBRE";
	}
	if (m == 12)
	{
		ml = "DICIEMBRE";
	}

}

void dia_letra(int qdc, char* &dl)
{
	if (qdc == 1)
	{
		dl = "LUNES";
	}
	if (qdc == 2)
	{
		dl = "MARTES";
	}
	if (qdc == 3)
	{
		dl = "MIERCOLES";
	}
	if (qdc == 4)
	{
		dl = "JUEVES";
	}
	if (qdc == 5)
	{
		dl = "VIERNES";
	}
	if (qdc == 6)
	{
		dl = "SABADO";
	}
	if (qdc == 0)
	{
		dl = "DOMINGO";
	}
}

void que_dia_cae(int d, int m, int a, int &qdc)
{
	int x, año, c, va, co, mc;
	if (a <= 99)
	{
		co = 6;
	}
	else
	{
		if (a <= 199)
		{
			co = 4;
		}
		else
		{
			if (a <= 299)
			{
				co = 2;
			}
			else
			{
				if (a <= 399)
				{
					co = 0;
				}
				else
				{
					if (a <= 499)
					{
						co = 6;
					}
					else
					{
						if (a <= 599)
						{
							co = 4;
						}
						else
						{
							if (a <= 699)
							{
								co = 2;
							}
							else
							{
								if (a <= 799)
								{
									co = 0;
								}
								else
								{
									if (a <= 899)
									{
										co = 6;
									}
									else
									{
										if (a <= 999)
										{
											co = 4;
										}
										else
										{
											if (a <= 1099)
											{
												co = 2;
											}
											else
											{
												if (a <= 1199)
												{
													co = 0;
												}
												else
												{
													if (a <= 1299)
													{
														co = 6;
													}
													else
													{
														if (a <= 1399)
														{
															co = 4;
														}
														else
														{
															if (a <= 1499)
															{
																co = 2;
															}
															else
															{
																if (a <= 1599)
																{
																	co = 0;
																}
																else
																{
																	if (a <= 1699)
																	{
																		co = 6;
																	}
																	else
																	{
																		if (a <= 1799)
																		{
																			co = 4;
																		}
																		else
																		{
																			if (a <= 1899)
																			{
																				co = 2;
																			}
																			else
																			{
																				if (a <= 1999)
																				{
																					co = 0;
																				}
																				else
																				{
																					if (a <= 2099)
																					{
																						co = 6;
																					}
																					else
																					{
																						if (a <= 2199)
																						{
																							co = 4;
																						}
																						else
																						{
																							co = 2;
																						}
																					}
																				}
																			}
																		}
																	}
																}
															}
														}
													}
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}
	if (m == 1 || m == 10)
	{
		mc = 0;
	}
	else
	{
		if (m == 2 || m == 3 || m == 11)
		{
			mc = 3;
		}
		else
		{
			if (m == 4 || m == 7)
			{
				mc = 6;
			}
			else
			{
				if (m == 9 || m == 12)
				{
					mc = 5;
				}
				else
				{
					if (m == 5)
					{
						mc = 1;
					}
					else
					{
						if (m == 6)
						{
							mc = 4;
						}
						else
						{
							mc = 2;
						}
					}
				}
			}
		}
	}
	va = a;
	año = va % 100;
	c = año / 4;
	x = d + mc + año + c + co;
	qdc = x % 7;

}
