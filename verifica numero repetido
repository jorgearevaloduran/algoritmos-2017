#include "stdafx.h"
#include <iostream>
#include <string>
#include <time.h>
#include "conio.h"
//limite del tama√±o del vector
#define max 100
//limite del maximo numero que se va a generar
#define lsup 1000

void cargarvector(int v[max], int n);
void mostrarvector(int v[max], int n);
bool verificar(int v[max], int x, int k);
using namespace std;

void main()
{
	int v[max], n;
	cout << "verificar si un numero se repite" << endl;
	do
	{
		cout << "tamanho del vector: ";
		cin >> n;
	} while (n < 0 || n > max);
	cout << endl << "carga el vector" << endl;
	cargarvector(v, n);
	mostrarvector(v, n);
	cout << endl;

	getch();
}

void mostrarvector(int v[max], int n)
{
	for (int i = 0; i < n; i++)
		cout << v[i] << "\t";
}

void cargarvector(int v[max], int n)
{
	bool t;
	int num;
	for (int i = 0; i < n; i++)
	{
		do
		{
			t = true;
			cin >> num;
			if (i != 0)
			{
				if (verificar(v, num, i) == false)
				{
					cout << endl << "el numero ya fue ingresado" << endl;
					cout << "ingrese otro numero: ";
					t = false;
				}
			}
		} while (t == false);
		v[i] = num;
		num = 0;
		
	}
}

bool verificar(int v[max], int x, int k)
{
	for (int i = k-1; i >= 0; i--)
	{
		if (x == v[i])
		{
			return false;
		}
	}
	return true;
}
