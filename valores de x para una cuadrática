#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#include "math.h"
using namespace std;
void solucion(float a, float b, float c, float &x1, float &x2);

void main()
{
	float a, b, c, x1, x2;
	cout << "introduzca el valor de a: ";
	cin >> a;
	cout << "\n";
	cout << "introduzca el valor de b: ";
	cin >> b;
	cout << "\n";
	cout << "introduzca el valor de c: ";
	cin >> c;
	cout << "\n";
	solucion(a, b, c, x1, x2);



	getch();
}

void solucion(float a, float b, float c, float &x1, float &x2)
{
	float d;
	int i = -1;
	d = (b*b) - (4 * a*c);
	if (d < 0)
	{
		x1 = (-b / 2 * a);
		x2 = sqrt(((b*b) - (4 * a*c))*(-1)) / 2 * a;
		cout << "el valor de x de la cuadratica es: ";
		cout << "X1= ";
		cout << x1;
		cout << ", ";
		cout << "X2= ";
		cout << x2;
	}
	else
	{
		if (d == 0)
		{
			x1 = -b / (2 * a);
			cout << "el valor de x de la cuadratica es: ";
			cout << "X= ";
			cout << x1;
		}
		else
		{
			x1 = -b + sqrt(d) / (2 * a);
			x2 = -b - sqrt(d) / (2 * a);
			cout << "el valor de x de la cuadratica es: ";
			cout << "X1= ";
			cout << x1;
			cout << ", ";
			cout << "X2= ";
			cout << x2;
		}
	}
}
