#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#include "math.h"
using namespace std;

float binario_a_decimal(int a);
void validar_numero_binario(int &nv);

void main()
{
	int nb, nd;
	cout << "Conversion de un numero binario a decimal";
	cout << "\n";
	validar_numero_binario(nb);
	nd = binario_a_decimal(nb);
	cout << "\n";
	cout << "el numero binario a decimal es: " << nd;
	cout << "\n";
	getch();
}

void validar_numero_binario(int &nv)
{ 
	int b, n, i;
	do
	{
		cout << "introduzca un numero binario: ";
		cin >> n;
		i = n;
		while (i > 0)
		{
			b = i % 10;
			if (b - 1 == 0 || b + 1 == 1)
			{
				i = i / 10;
			}
			else
			{
				i = i * -1;
				n = n * -1;
				cout << "\n";
				cout << "el numero no es binario !!";
				cout << "\n";
				cout << "los numeros binarios estan compuestos solo por 1 y 0";
				cout << "\n";
			}
		}
	} 
	while (n<0);
	nv = n;
}

float binario_a_decimal(int a)
{
	float k = 2;
	int s, p, x;
	s = 0;
	p = 0;
	while (a>0)
	{
		x = a % 10;
		if (x == 1)
		{
			s = s + pow(k, p);
			a = a / 10;
		}
		else
		{
			a = a / 10;
		}
		p++;
	}
	return s;
}

